.drawer_screen{width: 100%;height: 100%;position: fixed;top: 0;left: 0;z-index: 10;background-color: #000;opacity: 0.3;overflow: hidden;}
.modal{width: 100%;position: fixed;bottom: 0;z-index: 11;background-color: #fff;height: 70%;}
.modal-close{font-size: 40rpx;color: #5d5d5d;margin: 10rpx 10rpx 0 0;}
.modal .modal-title{padding-left: 248rpx;border-bottom: 1px solid #bbbbbb;}
.modal-title image{width: 200rpx;height: 200rpx;position: absolute;top: -62rpx;left: 24rpx;border-radius: 10rpx;opacity: 0.7}
.modal .goods-price{font-size: 36rpx;color: #fe0000;}
.modal .modal-body{padding: 20rpx 24rpx;}
.modal .prop{border-bottom: 1px solid #ccc;}
.modal .prop-name{padding: 20rpx 0;font-size: 28rpx;}
.modal .prop>text{display: inline-block;background-color: #f2f2f2;line-height: 56rpx;padding: 0 24rpx;margin: 20rpx 30rpx 20rpx 0;border-radius: 10rpx;}
.selected{background-color: red !important;color: #fff;}
.number{width: 100%;padding: 30rpx 0;border-bottom: 1px solid #ccc;}
.number >text{line-height: 50rpx;}
.buy-value{width: 94rpx;text-align: center;background-color: #eee;margin:0 4rpx;font-size: 24rpx;border-radius: 10rpx;}
.minus,.plus{padding:0 20rpx;background-color: #ccc;border-radius: 10rpx;}
.plus{margin-right: 24rpx;}
.modal .btn{background-color: red;color: #fff;position: absolute;bottom: 0;width: 100%;text-align: center;line-height: 98rpx;}
